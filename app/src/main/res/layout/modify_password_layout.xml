<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="109dp"
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改密码"
        android:textSize="33sp"
        android:gravity="center"
        android:textColor="@color/black"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="12dp"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:background="@drawable/login_edit_type1"
            android:layout_width="340dp"
            android:layout_height="50dp">
            <TextView
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:id="@+id/term_text"
                android:textColor="@color/black"
                android:text="学号"
                android:textSize="20sp"
                />
            <EditText
                android:gravity="center_vertical"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:background="@null"
                android:id="@+id/modify_id_edit"
                android:textColor="@color/black"
                android:hint="请输入您的学号"
                android:textColorHint="@color/login_edit"
                android:textSize="20sp"
                android:maxLength="10"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/login_edit_type3">
            <TextView
                android:id="@+id/id_text"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:text="原密码"/>

            <EditText
                android:background="@null"
                android:id="@+id/modify_password_original_edit"
                android:gravity="center_vertical"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:textColorHint="@color/login_edit"
                android:hint="请输入您原来的密码"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:password="true"
                android:maxLength="20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/login_edit_type3"
            android:textSize="20dp">
            <TextView
                android:id="@+id/password_text"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:text="新密码"
                android:textSize="20dp"/>
            <EditText
                android:background="@null"
                android:id="@+id/modify_password_new_one_edit"
                android:gravity="center_vertical"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:textColorHint="@color/login_edit"
                android:hint="请您输入设置的新密码"
                android:password="true"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:maxLength="20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/login_edit_type2">
            <TextView
                android:id="@+id/phone_text"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:text="确认密码"/>

            <EditText
                android:background="@null"
                android:id="@+id/modify_password_new_two_edit"
                android:gravity="center_vertical"
                android:layout_width="270dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:textColorHint="@color/login_edit"
                android:hint="请您再次输入您的新密码"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:maxLength="20"
                android:password="true"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/modify_sure_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/log_button"
        android:layout_marginLeft="42dp"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:text="确定"
        android:textSize="20dp"
        android:textColor="@color/login_button" />

    <Button
        android:id="@+id/modify_cancel_button"
        android:layout_marginTop="20dp"
        android:background="@drawable/log_button"
        android:layout_marginLeft="42dp"
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:text="返回"
        android:textSize="20dp"
        android:textColor="@color/login_button" />

</LinearLayout>
